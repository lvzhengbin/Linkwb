<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/et_pwd_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/color_transparent"
        android:background="@color/color_transparent"
        android:cursorVisible="false"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ktv_password_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:padding="0.66dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/wb_widget_pwd_bg">

            <TextView
                android:id="@+id/ktv_tv_pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="false"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/ktv_img_pass1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:src="@drawable/wb_widget_img_psw_bg"
                android:visibility="invisible" />

        </FrameLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.66dp"
            android:layout_marginTop="0.66dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/wb_widget_pwd_bg">

            <TextView
                android:id="@+id/ktv_tv_pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="false"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/ktv_img_pass2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:src="@drawable/wb_widget_img_psw_bg"
                android:visibility="invisible" />

        </FrameLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.66dp"
            android:layout_marginTop="0.66dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/wb_widget_pwd_bg">

            <TextView
                android:id="@+id/ktv_tv_pass3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="false"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/ktv_img_pass3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:src="@drawable/wb_widget_img_psw_bg"
                android:visibility="invisible" />

        </FrameLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.66dp"
            android:layout_marginTop="0.66dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/wb_widget_pwd_bg">

            <TextView
                android:id="@+id/ktv_tv_pass4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="false"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/ktv_img_pass4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:src="@drawable/wb_widget_img_psw_bg"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>